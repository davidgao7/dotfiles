{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1",
        "num_ctx": 32000
      },
      "models": {
        "qwen3-coder": {
          "name": "qwen3-coder:lastest"
        }
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "mlx-community/GLM-4.7-Flash-4bit": {
          "name": "GLM-4.7-Flash-4bit"
        }
      }
    }
  },
  "mode": {
    "build": {
      // TODO: switch to opencode zen provider after spend all openrouter credits
      "prompt": "{file:./prompts/build.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true
      },
      "permission": {
        "edit": "ask",
        "bash": "ask",
        "webfetch": "ask"
      }
    },
    "plan": {
      // TODO: switch to opencode zen provider after spend all openrouter credits
      "prompt": "{file:./prompts/plan.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "edit": "ask",
        "bash": "ask",
        "webfetch": "ask"
      }
    }
  },
  "agent": {
    "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      // TODO: switch to opencode zen provider after spend all openrouter credits
      "prompt": "{file:./prompts/review.txt}",
      "tools": {
        // Disable file modification tools for review-only agent
        "write": false,
        "edit": false,
        "webfetch": true
      },
      "permission": {
        "webfetch": "ask"
      }
    },
    "code-explorer": {
      "description": "Explores unfamiliar codebases to understand structure and functionality",
      "prompt": "{file:./prompts/explore.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "edit": "deny",
        "bash": "ask",
        "webfetch": "ask"
      }
    }
  }
}
