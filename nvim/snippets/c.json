{
  "c-main": {
    "prefix": "main",
    "body": [
      "#include <stdio.h>",
      "",
      "int main(int argc, char *argv[]) {",
      "    $0",
      "    return 0;",
      "}"
    ],
    "description": "Standard C main function"
  },
  "c-printf": {
    "prefix": "printf",
    "body": [
      "printf(\"${1:format}\\n\"${2});"
    ],
    "description": "printf statement"
  },
  "c-scanf": {
    "prefix": "scanf",
    "body": [
      "scanf(\"${1:format}\", ${2:&var});"
    ],
    "description": "scanf statement"
  },
  "c-include": {
    "prefix": "inc",
    "body": [
      "#include <${1:stdio.h}>"
    ],
    "description": "Include a header"
  },
  "c-for-loop": {
    "prefix": "for",
    "body": [
      "for (int ${1:i} = 0; ${1} < ${2:n}; ${1}++) {",
      "    $0",
      "}"
    ],
    "description": "For loop"
  },
  "c-while-loop": {
    "prefix": "while",
    "body": [
      "while (${1:condition}) {",
      "    $0",
      "}"
    ],
    "description": "While loop"
  },
  "c-if": {
    "prefix": "if",
    "body": [
      "if (${1:condition}) {",
      "    $0",
      "}"
    ],
    "description": "If statement"
  },
  "c-else": {
    "prefix": "else",
    "body": [
      "else {",
      "    $0",
      "}"
    ],
    "description": "Else statement"
  },
  "c-struct": {
    "prefix": "struct",
    "body": [
      "struct ${1:Name} {",
      "    ${2:int field};",
      "};"
    ],
    "description": "C struct"
  }
}

